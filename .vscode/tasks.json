{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build",   // Команда для сборки
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "CMake build task"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}/build/YourExecutableName",  // Команда для запуска
            "group": "none",
            "dependsOn": "CMake Build",
            "problemMatcher": []
        }
    ]
}